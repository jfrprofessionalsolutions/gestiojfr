{% extends 'base.html.twig' %}
{% block title %}Gestió JFR{% endblock %}
{% block body %}
<div class="container">
    <div class="mx-auto col-4 p-4">
        <div class="login-form bg-light">
            <form method="post">
                <div class="py-3 ">
                    <h2 class="text-center h2 mb-3 font-weight-normal">Gestió JFR</h2>
                </div>
                {% if error %}
                    <div class="py-3">
                        <div class="alert alert-danger text-center">Les dades introduides no són correctes.</div>
                    </div>
                {% endif %}
                <div class="p-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required autofocus>
                </div>
                <div class="p-3">
                    <label for="inputPassword">Contrasenya</label>
                    <input type="password" name="contrasenya" id="contrasenya" class="form-control" required>
                </div>
                <div class="p-3 text-center">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Entrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

