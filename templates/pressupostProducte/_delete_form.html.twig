<form class="display-inline" method="post" action="{{ path('app_pressupost_producte_delete', {'id': productes.idPressupostProducte, 'idPressupost': productes.idPressupost }) }}" onsubmit="return confirm('Estas segur que vols eliminar aquest producte del pressupost?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ productes.idPressupostProducte) }}">
    <button class="btn btn-primary"><i data-feather="delete"></i></button>
</form>
