{% extends 'base.html.twig' %}

{% block title %}Pagaments index{% endblock %}

{% block body %}
    <h1>Pagaments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPagament</th>
                <th>IdComanda</th>
                <th>IdClient</th>
                <th>IdFormaPagament</th>
                <th>IdTipusPagament</th>
                <th>IdFactura</th>
                <th>Pagament</th>
                <th>Pagat</th>
                <th>DataCreacio</th>
                <th>DataModificacio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pagament in pagaments %}
            <tr>
                <td>{{ pagament.idPagament }}</td>
                <td>{{ pagament.idComanda }}</td>
                <td>{{ pagament.idClient }}</td>
                <td>{{ pagament.idFormaPagament }}</td>
                <td>{{ pagament.idTipusPagament }}</td>
                <td>{{ pagament.idFactura }}</td>
                <td>{{ pagament.pagament }}</td>
                <td>{{ pagament.pagat }}</td>
                <td>{{ pagament.dataCreacio ? pagament.dataCreacio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pagament.dataModificacio ? pagament.dataModificacio|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_pagaments_show', {'idPagament': pagament.idPagament}) }}">show</a>
                    <a href="{{ path('app_pagaments_edit', {'idPagament': pagament.idPagament}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pagaments_new') }}">Create new</a>
{% endblock %}
