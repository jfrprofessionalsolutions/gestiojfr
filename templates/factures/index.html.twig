{% extends 'base.html.twig' %}

{% block title %}Factures index{% endblock %}

{% block body %}
    <h1>Factures index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdFactura</th>
                <th>Factura</th>
                <th>IdClient</th>
                <th>IdComanda</th>
                <th>DataCreacio</th>
                <th>DataModificacio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.idFactura }}</td>
                <td>{{ facture.factura }}</td>
                <td>{{ facture.idClient }}</td>
                <td>{{ facture.idComanda }}</td>
                <td>{{ facture.dataCreacio ? facture.dataCreacio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ facture.dataModificacio ? facture.dataModificacio|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_factures_show', {'idFactura': facture.idFactura}) }}">show</a>
                    <a href="{{ path('app_factures_edit', {'idFactura': facture.idFactura}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_factures_new') }}">Create new</a>
{% endblock %}
